        width: 10%;
    }

    #inputBox_2 {
        width: 99%;
        margin-left: 0;
        height: 100%;
        padding: 2px;
    }

    #inputBox_3 {
        display: flex;
        justify-content: flex-end;
        margin: 10px 0 0 0;
    }

    .clickBox {
        height: 36px;
        width: 81px;
        font-size: 14px;
        padding: 3px;
        margin: 0 9px 0 0;
